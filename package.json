{
    "name": "aalhaj-website",
    "version": "1.0.0",
    "description": "منصة aalhaj للتجارة الإلكترونية",
    "main": "index.html",
    "scripts": {
        "build": "npm run optimize-images && npm run build-css && npm run build-js",
        "optimize-images": "imagemin images/* --out-dir=optimized-images",
        "build-css": "postcss css/*.css -d dist/css --use autoprefixer cssnano",
        "build-js": "uglifyjs js/*.js -o dist/js/script.min.js",
        "serve": "live-server .",
        "test": "npm run test-accessibility && npm run test-performance",
        "test-accessibility": "pa11y http://localhost:3000",
        "test-performance": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html"
    },
    "keywords": [
        "ecommerce",
        "arabic",
        "online-store"
    ],
    "author": "Tiyma Team",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^10.4.0",
        "cssnano": "^5.0.0",
        "imagemin-cli": "^7.0.0",
        "lighthouse": "^9.0.0",
        "live-server": "^1.2.2",
        "pa11y": "^6.0.0",
        "postcss-cli": "^9.0.0",
        "uglify-js": "^3.14.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie <= 11"
    ]
}